{
  "name": "multiplayer-quiz",
  "private": true,
  "dependencies": {
    "@rails/actioncable": "^6.0.0",
    "@rails/activestorage": "^6.0.0",
    "@rails/ujs": "^6.0.0",
    "@rails/webpacker": "5.4.4",
    "turbolinks": "^5.2.0",
    "vue": "^3.2.47",
    "vue-loader": "^17.0.1",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12"
  },
  "version": "0.1.0",
  "devDependencies": {
    "@vue/test-utils": "^2.3.1",
    "@babel/preset-env": "^7.20.2",
    "@vue/babel-preset-app": "^5.0.8",
    "babel-jest": "^29.5.0",
    "istanbul-reports": "^3.1.5",
    "jest": "^29.5.0",
    "webpack-dev-server": "^3"
  },
  "scripts": {
    "test": "jest --config package.json"
  },
  "jest": {
    "roots": [
      "<rootDir>/app/javascript/tests"
    ],
    "testMatch": [
      "**/tests/**/*.spec.[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "node_modules/",
      "config/webpack/test.js",
      "vendor/bundle/ruby",
      "/node_modules/",
      "/coverage/",
      "/tests/e2e/"
    ],
    "moduleDirectories": [
      "node_modules",
      "app/javascript"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "html"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "coverageDirectory": "coveragejs",
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "testEnvironment": "node"
  }
}
